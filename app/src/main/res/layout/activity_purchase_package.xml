<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.Purchase.Purchase_Package">

    <TextView
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Package Details:"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="One Month Pack"
        android:id="@+id/PackageDetails"/>
    <TextView
        android:padding="@dimen/_10sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put Your Reference NO:"/>
    <EditText
        android:id="@+id/referenceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Your Reference No"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase"
        android:layout_gravity="center"
        android:background="@color/browser_actions_bg_grey"
        android:id="@+id/purchaseBtn"/>

</LinearLayout>