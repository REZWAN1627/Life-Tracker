<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.Purchase.Purchase_Package">
    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/_10sdp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/trusted_image"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center"
        android:src="@drawable/locationimage"
        app:civ_border_color="#E62954"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_circle_background_color="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003" />
    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/_10sdp"/>

    <TextView
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Package Details:"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="One Month Pack"
        android:id="@+id/PackageDetails"/>
    <TextView
        android:padding="@dimen/_10sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put Your Reference NO:"/>
    <EditText
        android:id="@+id/referenceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Your Reference No"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase"
        android:layout_gravity="center"
        android:background="@color/browser_actions_bg_grey"
        android:id="@+id/purchaseBtn"/>

</LinearLayout>